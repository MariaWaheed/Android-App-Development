<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddDomain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="18dp"
            android:text="Add Domain"
            android:textColor="@color/logocolour"
            android:textSize="25dp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/technology"
                android:layout_width="361dp"
                android:layout_height="wrap_content"
                android:text="Technology"
                android:textSize="25dp"/>

            <RadioButton
                android:id="@+id/business"
                android:layout_width="164dp"
                android:layout_height="wrap_content"
                android:text="Buisness"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/Cplusplus"
                android:layout_width="198dp"
                android:layout_height="62dp"
                android:text="Education"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/aviation"
                android:layout_width="151dp"
                android:layout_height="wrap_content"
                android:text="Aviation"
                android:textSize="25dp" />


            <RadioButton
                android:id="@+id/service"
                android:layout_width="259dp"
                android:layout_height="wrap_content"
                android:text="Service Industry"
                android:textSize="25dp" />
            <RadioButton
                android:id="@+id/arts"
                android:layout_width="187dp"
                android:layout_height="wrap_content"
                android:text="Arts"
                android:textSize="25dp" />

            <RadioButton
                android:id="@+id/media"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:text="Media"
                android:textSize="25dp" />
            <RadioButton
                android:id="@+id/medical"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:text="Medical"
                android:textSize="25dp" />
            <RadioButton
                android:id="@+id/other"
                android:layout_width="285dp"
                android:layout_height="58dp"
                android:text="Other"
                android:textSize="25dp" />
        </RadioGroup>

        <Button
            android:id="@+id/save"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Save"
            android:textSize="18sp" />

        <Button
            android:id="@+id/back4"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Back"
            android:textSize="18sp" />
        <Button
            android:id="@+id/nexttodomainProfile"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Next"
            android:textSize="18sp" />


    </LinearLayout>
</ScrollView>