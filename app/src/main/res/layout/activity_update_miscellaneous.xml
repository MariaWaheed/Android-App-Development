<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddJobRequirement">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="17dp"
            android:layout_marginStart="75dp"
            android:text="Update Job Requirement"
            android:textColor="@color/logocolour"
            android:textSize="18sp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="334dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"

            android:layout_marginBottom="1dp"
            android:text="Job Nature"
            android:textColor="@color/logocolour"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/jobtype"
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Job Nature "
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="#808080" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="334dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="1dp"
            android:text="Salary Expected"
            android:textColor="@color/logocolour"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/salary"
            android:layout_width="350dp"
            android:layout_height="39dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="salary"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="#808080" />

        <EditText
            android:id="@+id/otherreq"
            android:layout_width="350dp"
            android:layout_height="97dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_edittext"
            android:ems="10"
            android:hint="Other requirements....... "
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textColor="@color/black"
            android:textColorHint="#808080" />

        <Button
            android:id="@+id/updatejobreq"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginStart="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Update"
            android:textSize="18sp" />



    </LinearLayout>
</ScrollView>